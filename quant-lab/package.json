  "description": "轻量级量化策略执行引擎（QuickJS Sandbox）",
  "type": "module",
  "main": "./dist/engine/index.js",
  "exports": {
    ".": "./dist/engine/index.js",
    "./engine": "./dist/engine/index.js",
    "./pool": "./dist/pool/index.js",
    "./scheduler": "./dist/scheduler/index.js",
    "./state": "./dist/state/index.js",
    "./types": "./dist/types.js"
  },
  "bin": {
    "lab": "./scripts/lab.ts",
